{
  "apps": {
    "name": "test",
    "script": "pm2 start  npm -- run serve",
    "cwd": "./",
    "args": "",
    "interpreter": "",
    "interpreter_args": "",
    "watch": true,
    "ignore_watch": [
      "node_modules",
      "logs"
    ],
    "exec_mode": "cluster_mode",
    "instances": 4,
    "max_memory_restart": 8,
    "error_file": "./logs/app-err.log",
    "out_file": "./logs/app-out.log",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "min_uptime": "60s",
    "max_restarts": 30,
    "autorestart": true,
    "restart_delay": 60,
    "env": {
      "NODE_ENV": "production",
      "REMOTE_ADDR": ""
    },
    "env_dev": {
      "NODE_ENV": "development",
      "REMOTE_ADDR": ""
    },
    "env_test": {
      "NODE_ENV": "test",
      "REMOTE_ADDR": ""
    }
  }
}